    <div class="h1_head" padding="5vh">
    <h1> Update Complaint Status </h1>
    </div>
    <form action="/admin/complaint/<%=complaint._id%>?_method=PUT" method="POST">
        
        <div class="form_container">
        
        <div class="form-group form-section">
          <label for="name">Enrollment Number</label>
          <input type="text" class="form-control" name="Enrollment_Number" id="Enrollment_Number" placeholder="Enrollment_Number" value="<%=complaint.Enrollment_Number%>">
        </div>

        <div class="form-group form-section">
            <label for="Complaint">Email</label>
            <input type="text" class="form-control" name="Email" id="Complaint" placeholder="Complaint" value="<%=complaint.Email%>">
        </div>

        <div class="form-group form-section">
            <label for="Complaint">Complaint</label>
            <input type="text" class="form-control" name="Complaint" id="Complaint" placeholder="Complaint" value="<%=complaint.Complaint%>">
        </div>

        <div class="form-group form-section">
            <label for="category">Category</label>
            <input type="text" class="form-control" name="category" id="category" placeholder="category" value="<%=complaint.category%>">
        </div>

        <div class="form-group form-section">
            <label for="status"> Select Status </label>
            <select class="form-control" name="status" id="status">
                <% for(let stat of status) { %> 
                    <option value="<%=stat%>" <%= complaint.status === stat ? "selected":""  %> ><%=stat%></option>    
                <% } %>     
            </select>
        </div>
        </div>


        <div class="set-reset">
        <button type="submit" class="btn btn-primary" value="Submit">Submit</button>
      <a href="/admin/complaint"> Cancel</a>
      <!-- <input type="reset" value="Reset"> -->
        </div>

      
</form>

