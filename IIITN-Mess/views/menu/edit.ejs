<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1> Edit menu </h1>
    <form action="/admin/menu/<%=menu._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Day Name</label>
          <input type="text" class="form-control" name="day" id="name" placeholder="Name" value="<%=menu.day%>">
        </div>


        <div class="form-group">
            <label for="price">Meal Type</label>
            <input type="text" class="form-control" name="mealType" id="price" placeholder="Price" value="<%=menu.mealType%>">
        </div>

        <div class="form-group">
            <label for="dishes">Dishes</label>
            <input type="text" class="form-control" name="dishes" id="dishes" placeholder="Price" value="<%=menu.dishes%>">
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </body>
</html>
